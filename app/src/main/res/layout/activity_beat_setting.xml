<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="1=C"
            android:textColor="@color/text_dark_black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_beat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/4"
            android:textColor="@color/text_dark_black"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <io.github.yedaxia.musicnote.view.TabButton
            android:id="@+id/btn_speed_down"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:button="@drawable/ic_remove_circle_outline_black" />


        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="120"
            android:textColor="@color/text_dark_black"
            android:textSize="30sp" />

        <io.github.yedaxia.musicnote.view.TabButton
            android:id="@+id/btn_speed_up"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:button="@drawable/ic_add_circle_outline_black" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp" />

    <io.github.yedaxia.musicnote.view.TabButton
        android:id="@+id/btn_play_beat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:button="@drawable/ic_play_large" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:text="@string/save" />
</LinearLayout>